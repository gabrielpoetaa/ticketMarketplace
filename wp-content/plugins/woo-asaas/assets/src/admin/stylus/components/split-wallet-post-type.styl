#walletiddiv
    position: relative
    margin-top: 15px

    #walletidwrap
      border: 0
      padding: 0

      #walletid-prompt-text
        color: #646970;
        position: absolute;
        font-size: 1.7em;
        padding: 10px;
        pointer-events: none;

      #wallet-id
        padding: 3px 8px
        font-size: 1.7em
        line-height: 100%
        height: 1.7em
        width: 100%
        outline: 0
        margin: 0 0 3px
        background-color: #fff

#the-list
  .row-actions
    left: 0 !important

#post-body .misc-pub-post-author::before
    content: "\f110"
    font normal 20px/1 dashicons
    speak never
    display inline-block
    margin-left -1px
    padding-right 3px
    vertical-align top
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

#save-action
	display: none

#post-body .misc-pub-post-status a.edit-post-status,
#post-body .misc-pub-visibility#visibility,
#post-body .misc-pub-curtime a
	display: none